    "electron-builder": "20.28.3"
  },
  "optionalDependencies": {
    "osx-mouse": "^1.3.1",
    "win-mouse": "^1.2.0"
  },
  "dependencies": {
    "color": "^3.0.0",
    "color-blind": "^0.1.1",
    "focus-visible": "^4.1.5",
    "robotjs": "git+https://github.com/toinane/robotjs.git"
  },
  "build": {
    "appId": "com.electron.cca",
    "productName": "CCA",
    "compression": "maximum",
    "copyright": "Copyright © 2018 TPG",
    "directories": {
    },
    "files": [
      "**/*"
